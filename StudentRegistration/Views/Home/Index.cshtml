@model IEnumerable<StudentViewModel>

@{
    ViewData["Title"] = "All Students";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3>All Students</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-dark" asp-controller="Home" asp-action="Add">New Student</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">LastName</th>
                        <th scope="col">DateOfBirth</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Email</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col">Address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <th scope="row">@student.StudentId</th>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td>@student.DateOfBirth</td>
                            <td>@student.Gender</td>
                            <td>@student.Email</td>
                            <td>@student.PhoneNumber</td>
                            <td>@student.Address</td>
                            <td><a class="btn btn-dark" asp-controller="Home" asp-action="Edit" asp-route-id="@student.StudentId">Edit</a></td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Home" asp-route-id="@student.StudentId" onClick="return confirm('Are you sure you want to delete this employee?')">Delete</a></td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>





